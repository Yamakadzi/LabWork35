<Page x:Class="Task1.Pages.Autiruzation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autiruzation" Background="White">

    <Grid Height="150" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Label Content="Логин "/>
        <Label Content="Пароль " Grid.Row="1"/>
        <TextBox Grid.Column="1"/>
        <TextBox Grid.Column="1" Grid.Row="1"/>
        <Button Content="Войти"  Grid.Row="2" Grid.ColumnSpan="2" Background="OrangeRed" Click="GoBackButton_Click"/>
        <Button Content="Зарегистрироваться" Grid.Row="3" Grid.ColumnSpan="2" Background="OrangeRed"  Click="RegistrationButton_Click"/>
    </Grid>
</Page>
